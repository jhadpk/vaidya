<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"

    android:layout_height="wrap_content"
    android:stretchColumns="0,1">
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:text="Name"
            android:textStyle="bold"
            android:layout_column="0">
        </TextView>

        <TextView
            android:id="@+id/textView2"
            android:text="Krishna Kumar Tiwari"
            android:layout_column="1">
        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:text="Phone"
            android:textStyle="bold"
            android:layout_column="0">
        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:text="9986882536"
            android:layout_column="1">
        </TextView>

    </TableRow>
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:text="Address"
            android:textStyle="bold"
            android:layout_column="0">
        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:text="Koramangala Bangalore"
            android:layout_column="1">
        </TextView>

    </TableRow>
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:textStyle="bold"
            android:text="Email"
            android:layout_column="0">
        </TextView>

        <TextView
            android:id="@+id/textView8"
            android:text="krishna.tiwari@inmobi.com"
            android:layout_column="1">
        </TextView>

    </TableRow>
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView9"
            android:text="Status"
            android:textStyle="bold"
            android:layout_column="0">
        </TextView>

        <TextView
            android:id="@+id/textView10"
            android:text="Active"
            android:layout_column="1">
        </TextView>

    </TableRow>


    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search"
            android:text="Search Organizations"
            android:textStyle="bold"
            >
        </TextView>

        <TextView
            android:id="@+id/change"
            android:text="Modify profile"

            android:layout_column="1">
        </TextView>

    </TableRow>


    <Button
        android:id="@+id/seachbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Search Organizations"
        android:textStyle="bold" />


    <Button
        android:id="@+id/modify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Modify profile"
        android:textStyle="bold" />




</TableLayout>